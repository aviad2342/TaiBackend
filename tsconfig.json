{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["reflect-metadata"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true
   },
   "include": [
       "src/**/*"
   ],
   "exclude": [
       "node_modules",
       "**/*.spec.ts"
   ]
}